<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Sign In - Magic Link Authentication</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: #f8fafc;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05), 0 10px 25px rgba(0, 0, 0, 0.08);
            padding: 50px 45px;
            width: 100%;
            max-width: 460px;
            border: 1px solid #e5e7eb;
        }

        .logo-section {
            text-align: center;
            margin-bottom: 32px;
        }

        .logo-circle {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            border-radius: 50%;
            margin: 0 auto 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        }

        .logo-circle svg {
            width: 30px;
            height: 30px;
            fill: white;
        }

        h1 {
            color: #111827;
            font-size: 26px;
            margin-bottom: 8px;
            text-align: center;
            font-weight: 700;
        }

        .subtitle {
            color: #6b7280;
            font-size: 14px;
            text-align: center;
            margin-bottom: 32px;
            line-height: 1.5;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            color: #374151;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        input[type="text"],
        input[type="email"] {
            width: 100%;
            padding: 13px 16px;
            border: 1.5px solid #d1d5db;
            border-radius: 10px;
            font-size: 15px;
            transition: all 0.2s ease;
            outline: none;
            background: #fafafa;
            color: #111827;
        }

        input[type="text"]:focus,
        input[type="email"]:focus {
            border-color: #3b82f6;
            background: white;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        input::placeholder {
            color: #9ca3af;
        }

        button {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-top: 8px;
            box-shadow: 0 2px 8px rgba(59, 130, 246, 0.25);
        }

        button:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.35);
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
        }

        button:active {
            transform: translateY(0);
        }

        button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .spinner {
            display: inline-block;
            width: 14px;
            height: 14px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-top: 2px solid white;
            border-radius: 50%;
            animation: spin 0.6s linear infinite;
            margin-right: 8px;
            vertical-align: middle;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .button-text {
            vertical-align: middle;
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 28px 0;
            color: #9ca3af;
            font-size: 13px;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e5e7eb;
        }

        .divider span {
            padding: 0 16px;
        }

        .info-box {
            background: #eff6ff;
            border: 1px solid #dbeafe;
            border-radius: 10px;
            padding: 14px 16px;
            margin-top: 24px;
            display: flex;
            gap: 12px;
            align-items: flex-start;
        }

        .info-box svg {
            width: 20px;
            height: 20px;
            fill: #3b82f6;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .info-box p {
            color: #1e40af;
            font-size: 13px;
            line-height: 1.5;
            margin: 0;
        }

        @media (max-width: 480px) {
            .container {
                padding: 40px 30px;
            }

            h1 {
                font-size: 24px;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="logo-section">
            <div class="logo-circle">
                <svg style="color: white;" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                        stroke="currentColor" stroke-width="2" fill="none" />
                </svg>
            </div>
            <h1>Welcome</h1>
            <p class="subtitle">Sign in securely with a magic link sent to your email</p>
        </div>

        <form onsubmit="event.preventDefault(); submitData();">
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" placeholder="John" required>
            </div>
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" placeholder="john@example.com" required>
            </div>
            <button type="submit" id="submitBtn">
                <span class="button-text">Send Magic Link</span>
            </button>
        </form>

        <div class="info-box">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
            </svg>
            <p>We'll send a secure login link to your email. Click it to sign in instantly.</p>
        </div>
    </div>

    <script>
        async function postApiCall(url, data) {
            const btn = document.getElementById('submitBtn');
            const btnText = btn.querySelector('.button-text');

            try {
                // Disable button and show loader
                btn.disabled = true;
                btnText.innerHTML = '<span class="spinner"></span>Sending...';

                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                if (response.status !== 200) throw new Error(result.message);

                alert('User registered. Please check Your Mail Inbox to get Magic link to Verify Your Account.');

                // Reset button
                btn.disabled = false;
                btnText.textContent = 'Send Magic Link';

                return response;

            } catch (error) {
                console.log('error :>> ', error);
                alert(error);

                // Reset button on error
                btn.disabled = false;
                btnText.textContent = 'Send Magic Link';
            }
        }

        async function submitData() {
            const firstName = document.getElementById('firstName').value;
            const email = document.getElementById('email').value;
            console.log('firstName, email :>> ', firstName, email);
            await postApiCall('/api/v1/authentication/magic-link', { email, firstName })
        }
    </script>
</body>

</html>