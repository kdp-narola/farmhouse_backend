<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Verifying Your Account</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: #f8fafc;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05), 0 10px 25px rgba(0, 0, 0, 0.08);
            padding: 60px 50px;
            width: 100%;
            max-width: 480px;
            text-align: center;
            border: 1px solid #e5e7eb;
        }

        .spinner-container {
            margin-bottom: 32px;
        }

        .spinner {
            width: 64px;
            height: 64px;
            border: 4px solid #e5e7eb;
            border-top: 4px solid #3b82f6;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin: 0 auto;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }

        #message {
            color: #374151;
            font-size: 20px;
            font-weight: 600;
            line-height: 1.6;
            margin-bottom: 12px;
        }

        .sub-message {
            color: #6b7280;
            font-size: 14px;
            line-height: 1.5;
        }

        .dots::after {
            content: '';
            animation: dots 1.5s steps(4, end) infinite;
        }

        @keyframes dots {
            0%, 20% {
                content: '';
            }
            40% {
                content: '.';
            }
            60% {
                content: '..';
            }
            80%, 100% {
                content: '...';
            }
        }

        /* Success State */
        .success-state {
            display: none;
        }

        .success-state.show {
            display: block;
            animation: fadeIn 0.4s ease;
        }

        .success-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            border-radius: 50%;
            margin: 0 auto 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            animation: scaleIn 0.5s ease;
        }

        .success-icon svg {
            width: 40px;
            height: 40px;
            stroke: white;
            stroke-width: 3;
            fill: none;
        }

        .success-message {
            color: #111827;
            font-size: 22px;
            font-weight: 700;
            margin-bottom: 12px;
        }

        .success-sub {
            color: #6b7280;
            font-size: 15px;
        }

        /* Error State */
        .error-state {
            display: none;
        }

        .error-state.show {
            display: block;
            animation: fadeIn 0.4s ease;
        }

        .error-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            border-radius: 50%;
            margin: 0 auto 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            animation: scaleIn 0.5s ease;
        }

        .error-icon svg {
            width: 40px;
            height: 40px;
            stroke: white;
            stroke-width: 3;
            fill: none;
        }

        .error-message {
            color: #111827;
            font-size: 22px;
            font-weight: 700;
            margin-bottom: 12px;
        }

        .error-details {
            color: #dc2626;
            font-size: 14px;
            background: #fef2f2;
            border: 1px solid #fecaca;
            border-radius: 8px;
            padding: 12px 16px;
            margin-top: 20px;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes scaleIn {
            from {
                transform: scale(0.8);
                opacity: 0;
            }
            to {
                transform: scale(1);
                opacity: 1;
            }
        }

        @media (max-width: 480px) {
            .container {
                padding: 50px 35px;
            }

            #message,
            .success-message,
            .error-message {
                font-size: 20px;
            }

            .spinner {
                width: 56px;
                height: 56px;
            }

            .success-icon,
            .error-icon {
                width: 70px;
                height: 70px;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div id="loadingState">
            <div class="spinner-container">
                <div class="spinner"></div>
            </div>
            <div id="message">Verifying your account<span class="dots"></span></div>
            <p class="sub-message">Please wait a moment while we confirm your identity</p>
        </div>

        <div class="success-state" id="successState">
            <div class="success-icon">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
            </div>
            <div class="success-message">Verification Successful!</div>
            <p class="success-sub">Redirecting you to set up your password...</p>
        </div>

        <div class="error-state" id="errorState">
            <div class="error-icon">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </div>
            <div class="error-message">Verification Failed</div>
            <div class="error-details" id="errorDetails"></div>
        </div>
    </div>

    <script>
        (async function _() {
            try {
                const queryString = window.location.search;
                const urlParams = new URLSearchParams(queryString);

                const response = await fetch('/api/v1/authentication/verify-magic-token', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ token: urlParams.get('token') })
                });
                const result = await response.json();

                if (response.status !== 200) throw new Error(result.message);

                // Show success state
                document.getElementById('loadingState').style.display = 'none';
                document.getElementById('successState').classList.add('show');

                // Store token
                localStorage.setItem('access_token', result.data.token);

                // Redirect after delay
                setTimeout(() => {
                    window.location.href = "http://192.168.100.166:3000/api/v1/authentication/setPassword";
                }, 2000);

                return response;

            } catch (error) {
                console.log('error :>> ', error);
                localStorage.clear()
                // Show error state
                document.getElementById('loadingState').style.display = 'none';
                document.getElementById('errorState').classList.add('show');
                document.getElementById('errorDetails').textContent = error.message || 'Verification failed. Please try again or request a new magic link.';
            }
        })()
    </script>
</body>

</html>